<% content_for :outside do %>
	<div id="mapLocation"></div>
<% end %>

<% content_for :script do %>
<script type="text/javascript">
	function initMaps(){
		loadMaps(<%= @center[0].to_f %>, <%= @center[1].to_f %>, 10);
	};
</script>
<% end %>
<div class="col-md-6">
	<div class="centered">
		<%= form_tag(find_stop_path, method: :post, class: 'form-inline', id: 'search-form') do %>
				<div class="input-group">
			 	 <%= search_field_tag :term, params[:term], placeholder: "Search for stops...", data: { autocomplete_source: stops_list_path}, class: 'form-control form-control-lg', id: 'search_stop_term' %>
			 	 	<div class="input-group-addon">
					<%= material_icon.search %>
				</div>
			 	 </div>
			  <%#= submit_tag 'Search', name: nil, class: 'btn btn-primary' %>
		<% end %>
	</div>
</div>


