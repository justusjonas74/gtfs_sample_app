<div class="row justify-content-center">
	<div class="col-md-6">
		<h1><%= @stops[0].stop_name %></h1>
		<table class="table table-striped table-sm">
			<thead>
				<tr>
					<th> Richtung</th>
					<th> Abfahrt </th>
					<th> calendar_id</th>
					

				</tr>
			</thead>
			<tbody>
				<% @stop_times.each do |st| %>
		       		<tr>
		       			<td> <%= st.trip_headsign %> </td>
		       			<td> <%= st.stop_times.take.departure_time.to_datetime.strftime("%T") unless st.stop_times.take.departure_time.nil? %> </td>
		       			<td> <%= st.calendar_id %></td>
		       		</tr>
		   	 <% end %>
			</tbody>
		</table>
	</div>
</div>	   