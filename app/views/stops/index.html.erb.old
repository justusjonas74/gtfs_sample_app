<h1>VGN Stops</h1>

<table class="table table-small">
    <thead>
        <tr>
            <th>Name</th>
            <th>ID</th>
            <th>parent_station</th>
        </tr>
    </thead>
    <tbody>
        <% @stops.each do |st| %>
            <tr>
                <td><%= link_to st.stop_name, stop_path(st.id) %></td>
                <td><%= st.stop_id %></td>
                <td><%= st.parent_station %></td>
            </tr>
        <% end %>
    </tbody>
</table>

<%= will_paginate @posts %>